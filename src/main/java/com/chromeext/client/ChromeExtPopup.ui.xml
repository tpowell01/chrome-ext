<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:ce="urn:import:com.chromeext.client.forms">
    <gwt:DialogBox modal="false" autoHide="false">
        <gwt:VerticalPanel width="300px">
            <gwt:FlowPanel styleName="state-panel">
                <gwt:Label ui:field="lblState">[State]</gwt:Label>
                <gwt:Label ui:field="lblStateDescription">[State Description]</gwt:Label>
            </gwt:FlowPanel>
            <gwt:FlowPanel styleName="form-panel" ui:field="fpFormContainer">
                <ce:EmptyForm/>
            </gwt:FlowPanel>
            <gwt:FlowPanel styleName="context-panel" ui:field="fpContextContainer">
                <ce:EmptyForm/>
            </gwt:FlowPanel>
            <gwt:FlowPanel>
                <gwt:Button ui:field="btnClear">[Clear]</gwt:Button>
                <gwt:Button ui:field="btnReplay">[Replay]</gwt:Button>
                <gwt:Button ui:field="btnSave">[Save]</gwt:Button>
            </gwt:FlowPanel>
        </gwt:VerticalPanel>
    </gwt:DialogBox>
</ui:UiBinder>